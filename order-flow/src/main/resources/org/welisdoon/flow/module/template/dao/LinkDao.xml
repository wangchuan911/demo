<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.flow.module.template.dao.LinkDao">

    <resultMap id="rm_Link" type="org.welisdoon.flow.module.template.entity.Link">
        <id column="ID" property="id"></id>
        <result column="SUPER_ID" property="superId"></result>
        <result column="NODE_ID" property="nodeId"></result>
        <result column="SEQ" property="seq"></result>
        <result column="TEMPLATE_ID" property="templateId"></result>
        <result column="FUNCTION_ID" property="functionId"></result>
        <collection property="subTree" ofType="org.welisdoon.flow.module.template.entity.Link"
                    select="list" column="{superLinkId=QWERTYU_ID,templateId=TEMPLATE_ID}"></collection>
    </resultMap>
    <sql id="showTree">
        <include refid="org.welisdoon.flow.module.template.dao.StreamDao.showTree"/>
    </sql>
    <select id="list" parameterType="org.welisdoon.flow.module.template.entity.FlowCondition" resultMap="rm_Link">
        select A.*,
        <include refid="showTree"></include>
        from F_LINK A
        <where>
            <choose>
                <when test="superLinkId!=null">
                    and SUPER_ID=#{superLinkId}
                </when>
                <otherwise>
                    and SUPER_ID is null
                </otherwise>
            </choose>
            and TEMPLATE_ID=#{templateId}
        </where>
        order by SEQ
    </select>

    <select id="get" parameterType="org.welisdoon.flow.module.template.entity.FlowCondition" resultMap="rm_Link">
        select a.*,<include refid="showTree"></include> from F_LINK a
        WHERE id=#{linkId}
    </select>


</mapper>
