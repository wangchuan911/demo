<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.model.data.dao.ExpressDao">
    <resultMap id="rm_ExpressEntity" type="org.welisdoon.model.data.entity.express.ExpressEntity">
        <id property="id" column="ID"></id>
        <result property="name" column="NAME"></result>
        <result property="code" column="CODE"></result>
        <result property="express" column="EXPRESS"></result>

    </resultMap>
    <select id="get" parameterType="long"
            resultMap="rm_ExpressEntity">
        select *
        from DM_EXPRESS a
        where a.id = #{value}
    </select>
    <select id="list" parameterType="org.welisdoon.model.data.condition.TableCondition"
            resultMap="rm_ExpressEntity">
        select * from DM_EXPRESS a
        <where>
            <if test="id!=null">
                and a.id=#{value}
            </if>
            <if test="name!=null">
                and a.name=#{value}
            </if>
        </where>

    </select>

    <insert id="add" parameterType="org.welisdoon.model.data.entity.database.TableEntity"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO DM_EXPRESS(
                             ID,
                             NAME,
                             EXPRESS,)
        VALUES (
                #{id},
                #{name},
                #{express})
    </insert>

    <insert id="update" parameterType="org.welisdoon.model.data.entity.database.TableEntity"
            useGeneratedKeys="true" keyProperty="id">
        UPDATE DM_EXPRESS
        <set>
            <if test="express!=null">
                EXPRESS=#{express},
            </if>
        </set>
        WHERE ID = #{id}
    </insert>

</mapper>
