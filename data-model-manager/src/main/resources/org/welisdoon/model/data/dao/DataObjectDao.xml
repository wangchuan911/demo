<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.model.data.dao.DataObjectDao">
    <resultMap id="rm_DataObjectEntity" type="org.welisdoon.model.data.entity.object.DataObjectEntity">
        <id property="id" column="ID"></id>
        <result property="name" column="NAME"></result>
        <result property="code" column="CODE"></result>
        <association property="fields" column="{entity.object.id=ID}"
                     select="org.welisdoon.model.data.dao.FieldDao.list"></association>
    </resultMap>
    <select id="get" parameterType="long"
            resultMap="rm_DataObjectEntity">
        select *
        from DM_OBJECT a
        where a.id = #{value}
    </select>

    <select id="list" parameterType="org.welisdoon.model.data.condition.DataObjectCondition"
            resultMap="rm_DataObjectEntity">
        SELECT * FROM DM_OBJECT A
        <where>
            <if test="code!=null">and CODE=#{code}</if>
            <if test="id!=null">and ID=#{id}</if>
            <if test="name!=null">and NAME=#{name}</if>
        </where>
        ORDER BY A.ID DESC

    </select>

    <insert id="add" parameterType="org.welisdoon.model.data.entity.object.DataObjectEntity"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO DM_OBJECT(CODE,
                                   ID,
                                   NAME,
                                   TABLE_ID)
        VALUES (#{code},
                #{id},
                #{name},
                #{table.id},)
    </insert>

    <insert id="update" parameterType="org.welisdoon.model.data.entity.object.DataObjectEntity"
            useGeneratedKeys="true" keyProperty="id">
        UPDATE DM_OBJECT
        <set>
            <if test="code!=null">CODE=#{code},</if>
            <if test="id!=null">ID=#{id},</if>
            <if test="name!=null">NAME=#{name},</if>
            <if test="table.id!=null">TABLE_ID=#{table.id},</if>
        </set>
        WHERE ID = #{id}
    </insert>


</mapper>
