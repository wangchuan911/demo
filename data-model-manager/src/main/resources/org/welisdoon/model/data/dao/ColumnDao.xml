<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.model.data.dao.ColumnDao">

    <select id="get" parameterType="long"
            resultType="org.welisdoon.model.data.entity.database.ColumnEntity">
        select *
        from DM_COLUMN a
        where a.id = #{value}
    </select>

    <select id="list" parameterType="org.welisdoon.model.data.condition.ColumnCondition"
            resultMap="ColumnEntity">
        SELECT * FROM DM_COLUMN A
        <where>
            TABLE_ID=#{tableId} and
            <if test="code!=null ">and CODE=#{code}</if>
            <if test="id!=null ">and ID=#{id}</if>
            <if test="type!=null ">and JDBC_TYPE=#{type.name()}</if>
            <if test="length!=null ">and LENGTH=#{length}</if>
            <if test="level!=null ">and LEVEL=#{level}</if>
            <if test="name!=null ">and NAME=#{name}</if>
            <if test="table!=null and table_id!=null ">and TABLE_ID=#{table.id}</if>
        </where>
        ORDER BY A.ID DESC

    </select>

    <insert id="add" parameterType="org.welisdoon.model.data.entity.database.ColumnEntity"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO DM_COLUMN(CODE,
                              ID,
                              JDBC_TYPE,
                              LENGTH,
                              LEVEL,
                              NAME,
                              TABLE_ID)
        VALUES (#{code},
                #{id},
                #{jdbc_type},
                #{length},
                #{level},
                #{name},
                #{table.id})
    </insert>

    <insert id="update" parameterType="org.welisdoon.model.data.entity.database.ColumnEntity"
            useGeneratedKeys="true" keyProperty="id">
        UPDATE DM_COLUMN
        <set>
            CODE=#{code},
            JDBC_TYPE=#{type.name},
            LENGTH=#{length},
            LEVEL=#{level},
            NAME=#{name},
        </set>
        WHERE ID = #{id}
    </insert>


</mapper>
