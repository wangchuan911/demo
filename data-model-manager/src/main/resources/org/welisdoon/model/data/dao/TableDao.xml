<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.model.data.dao.TableDao">

    <select id="get" parameterType="long"
            resultType="org.welisdoon.model.data.entity.database.TableEntity">
        select *
        from DM_TABLE a
        where a.id = #{value}
    </select>
    <select id="list" parameterType="org.welisdoon.model.data.condition.TableCondition"
            resultType="org.welisdoon.model.data.entity.database.TableEntity">
        select * from DM_TABLE a
        <where>
            <if test="id!=null">
                and a.id=#{value}
            </if>
            <if test="code!=null">
                and a.code=#{value}
            </if>
            <if test="name!=null">
                and a.name=#{value}
            </if>
        </where>

    </select>

    <insert id="add" parameterType="org.welisdoon.model.data.entity.database.TableEntity"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO DM_TABLE(CODE,
                             ID,
                             NAME,
                             TABLE_ID,)
        VALUES (#{CODE},
                #{ID},
                #{NAME},
                #{TABLE_ID})
    </insert>

    <insert id="update" parameterType="org.welisdoon.model.data.entity.database.TableEntity"
            useGeneratedKeys="true" keyProperty="id">
        UPDATE DM_TABLE
        <set>
            <if test="code!=null">
                CODE=#{code},
            </if>
            <if test="name!=null">
                NAME=#{name},
            </if>
        </set>
        WHERE ID = #{id}
    </insert>

</mapper>
