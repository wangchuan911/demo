<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.model.data.dao.FieldDao">
    <resultMap id="rm_FieldEntity" type="org.welisdoon.model.data.entity.object.FieldEntity">
        <id property="id" column="ID"></id>
        <result property="name" column="NAME"></result>
        <result property="code" column="CODE"></result>
        <result property="style" column="STYLE"></result>
        <association property="columns" column="ID" select="getColumns"></association>
    </resultMap>

    <select id="getColumns" parameterType="long" resultMap="org.welisdoon.model.data.dao.ColumnDao.rm_ColumnEntity">
        select B.*
        from DM_OBJECT_FIELD_TO_TABLE_COLUMN A
                 join DM_TABLE_COLUMN B
                      ON A.COLUMN_ID = B.ID
        where A.FIELD_ID = #{value}
    </select>
    <select id="get" parameterType="long"
            resultMap="rm_FieldEntity">
        select *
        from DM_FIELD a
        where a.id = #{value}
    </select>

    <select id="list" parameterType="org.welisdoon.model.data.condition.FieldCondition"
            resultMap="rm_FieldEntity">
        SELECT * FROM DM_FIELD A
        <where>
            TABLE_ID=#{tableId} and
            <if test="code!=null ">and CODE=#{code}</if>
            <if test="id!=null ">and ID=#{id}</if>
            <if test="type!=null ">and JDBC_TYPE=#{type.name()}</if>
            <if test="length!=null ">and LENGTH=#{length}</if>
            <if test="name!=null ">and NAME=#{name}</if>
            <if test="table!=null and table_id!=null ">and TABLE_ID=#{table.id}</if>
        </where>
        ORDER BY A.ID DESC

    </select>

    <insert id="add" parameterType="org.welisdoon.model.data.entity.object.FieldEntity"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO DM_FIELD(COLUMN_ID,
                             DEFAULT_VALUE,
                             ID,
                             INPUT_ID,
                             LOCK,
                             NAME)
        VALUES (#{column.id},
                #{defaultValue},
                #{id},
                #{input,id},
                #{lock},
                #{name})
    </insert>

    <insert id="update" parameterType="org.welisdoon.model.data.entity.object.FieldEntity"
            useGeneratedKeys="true" keyProperty="id">
        UPDATE DM_FIELD
        <set>
            CODE=#{code},
            JDBC_TYPE=#{type.name},
            LENGTH=#{length},
            NAME=#{name},
        </set>
        WHERE ID = #{id}
    </insert>


</mapper>
