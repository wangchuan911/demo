<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.metadata.prototype.dao.MetaLinkDao">
    <resultMap id="MetaLink" type="org.welisdoon.metadata.prototype.define.MetaLink">
        <result column="id" property="id"></result>
        <result column="type_id" property="typeId"></result>
        <result column="object_id" property="objectId"></result>
        <result column="value_id" property="valueId"></result>
        <result column="attribute_id" property="attributeId"></result>
        <result column="instance_id" property="instanceId"></result>
    </resultMap>
    <select id="list"
            parameterType="org.welisdoon.metadata.prototype.condition.MetaLinkCondition"
            resultMap="MetaLink">
        select * from MD_LINK
        <where>
            <if test="id!=null ">and id = #{id}</if>
            <if test="parentId!=null ">and parent_id = #{parentId}</if>
            <if test="data!=null">
                <if test="parentId==null and data.parentId!=null">and parent_id = #{data.parentId}</if>
                <if test="data.objectId!=null ">and object_id = #{data.objectId}</if>
                <if test="data.valueId!=null ">and value_id = #{data.valueId}</if>
                <if test="data.attributeId!=null ">and attribute_id = #{data.attributeId}</if>
                <if test="data.instanceId!=null ">and instance_id = #{data.instanceId}</if>
                <if test="data.typeId!=null">
                    and type_id in ( #{data.typeId,jdbcType=NUMERIC}
                    <foreach collection="@org.welisdoon.metadata.prototype.consts.LinkMetaType@getChildTypeId(data.typeId)" item="type_id">
                        ,#{type_id,jdbcType=NUMERIC}
                    </foreach>
                    )
                </if>
            </if>

        </where>

    </select>
    <select id="get"
            parameterType="long"
            resultMap="MetaLink">
        select * from MD_LINK
        <where>
            and id=#{value}
        </where>

    </select>

</mapper>
