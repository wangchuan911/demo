<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.metadata.prototype.dao.MetaValueDao">

    <resultMap id="MetaValue" type="org.welisdoon.metadata.prototype.define.MetaValue">
        <id column="id" property="id"></id>
        <result column="type_id" property="typeId"></result>
        <result column="name" property="name"></result>
        <result column="code" property="code"></result>
        <result column="value_type_id" property="valueTypeId"></result>
        <result column="value" property="value"></result>
    </resultMap>
    <select id="list"
            parameterType="org.welisdoon.metadata.prototype.condition.MetaObjectCondition"
            resultMap="MetaValue">
        select * from MD_VALUE
        <where>
            <if test="parentId!=null ">and parent_id = #{parentId}</if>
        </where>

    </select>


    <select id="get"
            parameterType="long"
            resultMap="MetaValue">
        select * from MD_VALUE
        <where>
            and id=#{value}
        </where>

    </select>
</mapper>
