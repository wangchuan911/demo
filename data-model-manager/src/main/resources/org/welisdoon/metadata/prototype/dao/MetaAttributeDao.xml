<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.welisdoon.metadata.prototype.dao.MetaAttributeDao">

    <resultMap id="MetaAttribute" type="org.welisdoon.metadata.prototype.define.MetaObject$Attribute">
        <id column="id" property="id"></id>
        <result column="type_id" property="typeId"></result>
        <result column="name" property="name"></result>
        <result column="code" property="code"></result>
        <result column="object_id" property="objectId"></result>
    </resultMap>
    <select id="list"
            parameterType="org.welisdoon.metadata.prototype.condition.MetaAttributeCondition"
            resultMap="MetaAttribute">
        select * from md_attr
        <where>
            <if test="parentId!=null ">and parent_id = #{parentId}</if>
            <if test="objectId!=null ">and object_id = #{objectId}</if>
        </where>

    </select>


</mapper>
