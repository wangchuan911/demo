<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hubidaauto.servmarket.module.goods.dao.ItemDao">

    <select id="get"
            parameterType="com.hubidaauto.servmarket.module.goods.entity.ItemCondition"
            resultType="com.hubidaauto.servmarket.module.goods.entity.ItemVO">
        select * from mall_item a where a.id=#{item.get(0).id}
    </select>

    <select id="list" parameterType="com.hubidaauto.servmarket.module.goods.entity.ItemCondition"
            resultType="com.hubidaauto.servmarket.module.goods.entity.ItemVO">
        select * from mall_item a
        <where>
            <if test="items!=null and items.size()>0">
                and exists (
                <foreach collection="items" item="item" separator="union all">
                    select 1 from dual
                    <where>
                        <include refid="condition"></include>
                    </where>
                </foreach>
                )
            </if>
        </where>
    </select>
    <sql id="condition">
        and a.type=#{item.type}
    </sql>

</mapper>
