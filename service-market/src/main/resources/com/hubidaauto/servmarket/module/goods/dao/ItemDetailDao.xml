<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hubidaauto.servmarket.module.goods.dao.ItemDetailDao">

    <select id="get" parameterType="long"
            resultType="com.hubidaauto.servmarket.module.goods.entity.ItemDetailVO">
        select * from MALL_ITEM_DETAIL a where a.item_id=#{value}
    </select>

    <select id="list" parameterType="com.hubidaauto.servmarket.module.goods.entity.ItemCondition"
            resultType="com.hubidaauto.servmarket.module.goods.entity.ItemDetailVO">
        select * from MALL_ITEM_DETAIL a
        <where>
            <choose>
                <when test="id!=null">
                    and item_id=#{id}
                </when>
                <otherwise>
                    <if test="datas!=null and datas.size()>0">
                        and exists (
                        <foreach collection="datas" item="data" separator="union all">
                            select 1 from dual
                            <where>
                                <include refid="condition"></include>
                            </where>
                        </foreach>
                        )
                    </if>
                </otherwise>
            </choose>
        </where>
    </select>
    <sql id="condition">
        and a.item_id=#{data.id}
    </sql>

</mapper>
