<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hubidaauto.servmarket.module.order.dao.ServMallOrderDao">

    <select id="list" parameterType="com.hubidaauto.servmarket.module.order.entity.OrderCondition"
            resultType="com.hubidaauto.servmarket.module.order.entity.OrderVO">
        select a.* from ORDER a
        <where>
            <choose>
                <otherwise>
                    <if test="datas!=null and datas.size()>0">
                        and exists (
                        <foreach collection="datas" item="data" separator="union all">
                            select 1 from dual
                            <where>
                                <include refid="condition"></include>
                            </where>
                        </foreach>
                        )
                    </if>
                </otherwise>
            </choose>
        </where>
        limit ${page.start},${page.size}
    </select>
    <sql id="condition">
        and a.id=#{data.ID}
    </sql>
    <select id="get" parameterType="long" resultType="com.hubidaauto.servmarket.module.order.entity.OrderVO">
        select a.* from ORDER a where a.ID=#{value}
    </select>

</mapper>
